/* pages/home/pages/page-v/index.wxss */
.main{
  position: fixed;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: #263D43;
  overflow: auto;
}
.main .bg{
  width: 100%;
  position: absolute;
  top: -0px;
}
.main .bg image{
  width: 100%;
  height: 100%;
}
.pl{
  color: white;
  position: relative;
}
.pl .btn{
  height: 20px;
}
.pl .btn text{
  position: absolute;
  right: 30px;
}
.pl .content{
  margin-top: 20px;
  padding: 0px 20px;
  font-size: 20px;
  font-family: 'Fira Code', monospace;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  transition: inherit 0.3s;
  -webkit-transition: inherit 0.3s;
}
.pl .user{
  /* position: absolute;
  right: 30px;
  top: 100px;
  top: 150px; */
  padding: 0px 20px;
  text-decoration: underline;
  margin-top: 30px;
  font-size: 13px;
}
.pl .user text{
  display: block;
}