.more view{
  width: 100px;
  height: 30px;
  margin: auto;
  text-decoration: underline;
  color: white;
  font-size: 20px;
  margin-bottom: 30px;
} 
@media screen and (max-width: 321px){
  .main2 .logo{
    width: 80%;
    height: 80px;
    margin: auto;
  }
}
@media screen and (min-width: 321px){
  .main2 .logo{
    width: 80%;
    height: 100px;
    margin: auto;
  }
}
.goTop{
  width: 50px;
  height: 50px;
  position: fixed;
  width: 50px;
  height: 50px;
  position: fixed;
  z-index: 5;
  background-color: white;
  border-radius: 50%;
  right: 20px;
  bottom: 20px;
  background-blend-mode: color-burn;
}
.goTop image{
  width: 100%;
  height: 100%;
  position: relative;
  left: 1.4px;
}
.bg{
  height: 100vh;
  position: fixed;
  width: 100%;
}
.bg image{
  height: 100%;
  width: 100%;
}
.main2{
  /* background-color: #F1F2F6; */
  /* background-image: url('http://www.file.liyangit.top/weapp/video_bg.png'); */
  position: relative;
  /* background-size: 100% 100%; */
  transition: all 0.3s linear;
  -webkit-transition: all 0.3s linear;
  overflow: auto;
  z-index: 1;
}
.main2 .dhlZz{
  position: fixed;
  width: 100%;
  background-color: #d0c1c1;
  z-index: 2;
  top: 0px;
}

.main2 .logo image{
  width: 100%;
  height: 100%;
}
.main2 .wrap{
  width: 95%;
  margin: auto;
  margin-top: 10px;
}
.main2 .wrap .search {
  width: 100%;
  position: relative;
  display: flex;
  overflow: hidden;
  height: 38px;
}

.main2 .wrap .searchTerm {
  width: 100%;
  border: 3px solid #00B4CC;
  border-right: none;
  padding: 5px;
  height: 20px;
  border-radius: 5px 0 0 5px;
  outline: none;
  /* color: #9DBFAF; */
  color: white;
}
.main2 .wrap .searchIco{
  position: relative;
  top: -5px;
  left: -15px;
  width: 40px;
  height: 40px;
}
.main2 .wrap .searchTerm:focus{
  color: #00B4CC;
}

.main2 .wrap .searchButton {
  width: 40px;
  /* height: 36px; */
  border: 1px solid #00B4CC;
  background: #00B4CC;
  text-align: center;
  color: #fff;
  border-radius: 0 5px 5px 0;
  cursor: pointer;
  font-size: 20px;
}
.main2 .list{
  padding: 10px 20px;
}
.main2 .list .list-content{
  background-color: #F1F2F6;
  margin-bottom: 10px;
  border-radius: 10px;
  overflow: hidden;
  padding: 10px;
}
.main2 .list .list-content-desc{
  position: relative;
}
.main2 .list .list-content-desc .list-content-desc-cell{
  font-size: 14px;
  position: absolute;
  left: 100px;
}
