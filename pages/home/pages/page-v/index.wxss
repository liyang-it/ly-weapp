/* pages/home/pages/page-v/index.wxss */
.main{
  position: fixed;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: #263D43;
  overflow: auto;
}
.main .bg{
  width: 100%;
  position: absolute;
  top: -0px;
}
.main .bg image{
  width: 100%;
  height: 100%;
}
.pl{
  color: white;
  position: absolute;
  width: 100%;
}
.result{
  color: white;
  position: absolute;
  width: 100%;
  overflow: auto;
}
.pl .btn{
  height: 20px;
}
.pl .btn .search{
  position: absolute;
  right: 130px;
  width: 180px;
  height: 40px;
  border-bottom: 2px solid;
  top: -5px;
}
.pl .btn .search input{
  width: 80%;
  margin-left: 10px;
  margin-top: 10px;
  font-size: 20px;
}
.pl .btn text{
  position: absolute;
  right: 22px;
  font-weight: bold;
  top: 4px;
  font-size: 18px;
}
.pl .content{
  margin-top: 20px;
  padding: 0px 20px;
  font-size: 20px;
  font-family: 'Fira Code', monospace;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  transition: inherit 0.3s;
  -webkit-transition: inherit 0.3s;
}
.pl .user{
  padding: 0px 20px;
  text-decoration: underline;
  margin-top: 30px;
  font-size: 13px;
  display: none;
}
.pl .user text{
  display: block;
}

.result-content{
  padding: 10px 20px;
  position: relative;
}
.result-content-pic{
  height: 120px;
  width: 100px;
  border-radius: 10px;
  overflow: hidden;
}
.result-content-pic image{
  width: 100%;
  height: 100%;
}
.result-content-content{
  position: absolute;
  left: 130px;
  top: 10px;
}
.more view{
  width: 100px;
  height: 30px;
  margin: auto;
  text-decoration: underline;
}